# Function to count uppercase letters in a string
def count_uppercase_letters(input_string):
    count = 0
    for char in input_string:
        if char.isupper():
            count += 1
    return count

# Function to count lowercase letters in a string
def count_lowercase_letters(input_string):
    count = 0
    for char in input_string:
        if char.islower():
            count += 1
    return count

# Accept a string from the user
input_string = input("Enter a string: ")

# Call the functions to get counts of uppercase and lowercase letters
uppercase_count = count_uppercase_letters(input_string)
lowercase_count = count_lowercase_letters(input_string)

# Display the count of uppercase and lowercase letters
print("Number of uppercase letters:", uppercase_count)
print("Number of lowercase letters:", lowercase_count)
